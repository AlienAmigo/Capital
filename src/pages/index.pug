//- Стандартный шаблон страницы
include ../pug/mixins.pug

doctype html
html(class='page  no-js', lang='ru')

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title MTrading
    link(rel='stylesheet', href='css/glide.core.css')
    link(rel='stylesheet', href='css/style.css')
    link(rel="apple-touch-icon", sizes="76x76", href="img/favicon/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="img/favicon/favicon-32x32.png")
    link(rel="icon", type="image/png", sizes="16x16", href="img/favicon/favicon-16x16.png")
    link(rel="manifest", href="img/favicon/site.webmanifest")
    link(rel="mask-icon", href="img/favicon/safari-pinned-tab.svg", color="#5bbad5")
    meta(name="msapplication-TileColor", content="#9f00a7")
     //- tab color
    meta(name="theme-color", content="plum")
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    script.
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');

  body
    noscript У вас отключен JavaScript. Это пугает.

    .page__inner

      header.banner
        .banner__logo
          a.logo__link(href='/')
            img.logo__img(src='img/logo.png', alt='')
        h1.banner__title #[strong Get $10,000] on demo trading account
        p.banner__text Test Forex trading in the real market environment
        a.btn(href='#', role='button') GET STARTED

      main.page__content
        section.free-simulator
          .free-simulator__text-wrapper
            p.free-simulator__subhead For Beginner Traders
            h2.free-simulator__title #[strong Free] trading simulator
            p.free-simulator__text Are you new to trading financial markets? – Sign up with MTrading and get from $5,000 on your free demo account to practice Forex, and CFDs trading strategies in real market conditions!
            a.btn(href='#', role='button') Open Demo Account
          .free-simulator__img-wrap
            img(src='img/simul.png', alt='')

        section.benefits
          h2.benefits__title Demo Account #[strong benefits]
          .benefits__wrap
            .benefits-item.invisible
              .benefits-item__img-wrap
                img(src='img/01.png', alt='')
              p Real trading #[br]experience without risk
            .benefits-item.invisible
              .benefits-item__img-wrap
                img(src='img/03.png', alt='')
              p Forex and CFDs trading #[br]in real market conditions
            .benefits-item.invisible
              .benefits-item__img-wrap
                img(src='img/05.png', alt='')
              p Professional #[br]individual support
            .benefits-item.invisible
              .benefits-item__img-wrap
                img(src='img/02.png', alt='')
              p Based on MetaTrader 4 #[br]trading platform
            .benefits-item.invisible
              .benefits-item__img-wrap
                img(src='img/04.png', alt='')
              p All trading #[br]strategies allowed
            .benefits-item.invisible
              .benefits-item__img-wrap
                img(src='img/06.png', alt='')
              p Unlimited demo balance #[br]starting at $5,000

        section.start
          .start__text-wrap
            p.start__subhead Gain Trading Experience
            h2.start__title Start in less#[br]than #[strong 5 minutes]
            p.start__text Gain the experience and enter the market with confidence
            a.btn(href='#', role='button') Open Demo Account
          .start__gallery
            .start__gallery-wrap
              .start__number
                .glide(id='slider-num')
                  .glide__track(data-glide-el='track')
                    .glide__slides
                      .glide__slide 01
                      .glide__slide 02
                      .glide__slide 03
                      .glide__slide 04

              .start__slides
                .glide(id='slider-img')
                  .glide__track(data-glide-el='track')
                    .glide__slides
                      .glide__slide
                        img(src='img/slide01.png', alt='')
                      .glide__slide
                        img(src='img/slide02.png', alt='')
                      .glide__slide
                        img(src='img/slide03.png', alt='')
                      .glide__slide
                        img(src='img/slide04.png', alt='')

    script(src='js/glide.min.js')
    script(src='js/script.min.js')
